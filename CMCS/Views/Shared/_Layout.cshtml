<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCS.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Kept container-fluid for full-width navbar -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <!-- Left-aligned navigation links -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Check if the UserId is stored in the session -->
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            @if (Context.Session.GetString("Role") == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Claims" asp-action="SubmitClaim">Submit Claim</a>
                                </li>
                            }
                            <!-- Only show View All Claims tab if the user is NOT a Lecturer -->
                            @if (Context.Session.GetString("Role") != "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Claims" asp-action="ViewClaims">View All Claims</a>
                                </li>
                            }
                            @if (Context.Session.GetString("Role") == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Claims" asp-action="TrackClaims">Track My Claims</a>
                                </li>

                                <!-- Show the Lecturer tab if the user has the Lecturer role -->
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Lecturer" asp-action="Dashboard">Lecturer Dashboard</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right-aligned Welcome/Logout or Login/Register -->
                    <ul class="navbar-nav ms-auto">
                        <!-- If user is logged in, show welcome, profile picture, profile link and logout -->
                        @if (Context.Session.GetString("UserId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <!-- Display profile picture -->
                                    <img src="~/path/to/default/profile/picture.png" class="profile-pic" alt="Profile Picture" />
                                    Welcome back, @Context.Session.GetString("FullName")!
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                                    <button type="submit" class="nav-link text-dark bg-transparent border-0">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content wrapped in container to prevent edge-to-edge layout -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer wrapped in container to keep it aligned with main content -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CMCS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
