@model List<Azure.Data.Tables.TableEntity>

<h2>Track Claim Status</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Claim Date</th>
            <th>Total Claim</th>
            <th>Claim Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.RowKey</td> <!-- Assuming RowKey is the Claim ID -->
                <td>@claim["SubmissionTime"]</td> <!-- Claim Date -->

                <td>R@(Convert.ToDouble(claim["HoursWorked"]) * Convert.ToDouble(claim["HourlyRate"]))</td> <!-- Total Claim -->

                <td>
                    @if (claim.ContainsKey("Status"))
                    {
                        @if (claim["Status"].ToString() == "Approved")
                        {
                            <button class="btn btn-success">Approved</button>
                        }
                        else if (claim["Status"].ToString() == "Denied")
                        {
                            <button class="btn btn-danger">Rejected</button>
                        }
                    }
                    else
                    {
                        <!-- Default to Pending -->
                        <button class="btn btn-secondary">Pending</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="Claims" asp-action="SubmitClaim" class="btn btn-primary">Submit a New Claim</a>
</p>

<!-- Include any required Bootstrap or styling -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
