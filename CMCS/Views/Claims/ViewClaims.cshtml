@model List<Azure.Data.Tables.TableEntity>

<h2>All Submitted Claims</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer Name</th>
            <th>Email</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Amount</th>
            <th>Claim Date</th>
            <th>Extra Notes</th>
            <th>Supporting Documents</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.RowKey</td> <!-- Claim ID -->
                <td>@claim["FullName"]</td> <!-- Lecturer Name -->
                <td>@claim.PartitionKey</td> <!-- Email -->
                <td>@claim["HoursWorked"]</td>
                <td>@claim["HourlyRate"]</td>
                <td>R@(Convert.ToDouble(claim["HoursWorked"]) * Convert.ToDouble(claim["HourlyRate"]))</td> <!-- Total Amount -->
                <td>@claim["SubmissionTime"]</td> <!-- Claim Date -->
                <td>@claim["ExtraNotes"]</td>

                <!-- Supporting Documents -->
                <td>
                    @if (claim.ContainsKey("FileUrls") && !string.IsNullOrEmpty(claim["FileUrls"].ToString()))
                    {
                        var files = claim["FileUrls"].ToString().Split(',');

                        @if (files.Length == 1)
                        {
                            var fileData = files[0].Split('|');

                            @if (fileData.Length == 2)
                            {
                                <form asp-controller="Claims" asp-action="ViewDocument" method="get">
                                    <input type="hidden" name="fileUrl" value="@fileData[1]" />
                                    <button type="submit" class="btn btn-primary">View Supporting Document</button>
                                </form>
                            }
                            else
                            {
                                <p>Error: Invalid file data</p>
                            }
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#fileModal-@claim.RowKey">
                                View Supporting Documents
                            </button>

                            <div class="modal fade" id="fileModal-@claim.RowKey" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Select a Document to View</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            @foreach (var file in files)
                                            {
                                                var fileData = file.Split('|');

                                                @if (fileData.Length == 2)
                                                {
                                                    <form asp-controller="Claims" asp-action="ViewDocument" method="get">
                                                        <input type="hidden" name="fileUrl" value="@fileData[1]" />
                                                        <button type="submit" class="btn btn-link">@fileData[0]</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <p>Error: Invalid file data</p>
                                                }
                                            }
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No Supporting Documents</p>
                    }
                </td>

                <!-- Actions for Approve/Deny -->
                <td>
                    @if (!claim.ContainsKey("Status"))
                    {
                        <form method="post" asp-controller="Claims" asp-action="UpdateClaimStatus">
                            <input type="hidden" name="claimId" value="@claim.RowKey" />
                            <button type="submit" name="status" value="Approved" class="btn btn-success">Approve</button>
                            <button type="submit" name="status" value="Reject" class="btn btn-danger">Reject</button>
                        </form>
                    }
                    else
                    {
                        <!-- If already decided, no buttons -->
                        @if (claim["Status"].ToString() == "Approved")
                        {
                            <span class="text-success">Approved</span>
                        }
                        else if (claim["Status"].ToString() == "Denied")
                        {
                            <span class="text-danger">Rejected</span>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Include Bootstrap JS for modal functionality -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
